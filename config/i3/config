exec --no-startup-id feh --bg-fill --randomize /home/gutt/Pictures/wall/cyberpunk-mostly-anime

# Auto exec settings (basicly reloads with i3)
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always picom -b --experimental-backends
exec_always systemctl --user restart dunst.service
exec_always --no-startup-id ~/Documents/scripts/autotiling.py

# Startup scripts
exec playerctld

